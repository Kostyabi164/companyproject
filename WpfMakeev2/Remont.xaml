<Window x:Class="WpfMakeev2.Remont"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMakeev2"
        mc:Ignorable="d"
        Title="Remont" Height="130" Width="300">
    <Grid Background="#FF3974A6" Opacity="0.7">
        <Label Content="Действия с оборудованием" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbRemont" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" Width="265">
            <ComboBoxItem Content="В работе"/>
            <ComboBoxItem Content="В ремонте"/>
            <ComboBoxItem Content="Выведено из эксплуатации"/>
        </ComboBox>
        <Button x:Name="btnEditStatus" Content="Сохранить" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="130" Click="btnEditStatus_Click"/>
        <Button x:Name="btnCancelRemont" Content="Отмена" HorizontalAlignment="Left" Margin="158,63,0,0" VerticalAlignment="Top" Width="117" Click="btnCancelRemont_Click"/>

    </Grid>
</Window>
